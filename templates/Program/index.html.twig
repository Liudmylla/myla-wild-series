{% extends 'base.html.twig' %}


{% block title %}All programs{% endblock %}


{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 text-center my-5">            
           <h1>Toutes les séries de la table program : </h1>
           <a href="{{ path('app_index') }}">Retour à l'accueil</a>
         </div>
    {% for program in programs %}
        <div class="col-12 col-md-4">
            <img width="40%" src="{{ program.poster }}" alt=""/>
            <h5>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h5>
            <p>{{ program.summary }}</p>
            <a href="{{ path("program_show",{id: program.id})}}">Voir la fiche</a>
        </div>
    {% else %}
    </div>
</div>
        Aucune série trouvée.

    {% endfor %}

{% endblock %}
